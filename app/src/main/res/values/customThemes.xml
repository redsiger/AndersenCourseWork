<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  SplashTheme  -->
    <style name="Theme.SplashScreen" parent="Theme.AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <!--  MainTheme  -->
    <style name="MainTheme" parent="Theme.AppTheme">
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomNavigationStyle">@style/bottom</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <!--  Buttons  -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnPrimary">?colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

    <!--  Toolbar  -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?defaultAppTextColor</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorPrimary">?colorSurface</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- BottomNavigation  -->
    <style name="bottom" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/bottomOverlay</item>
    </style>

    <style name="bottomOverlay">
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
    </style>

</resources>