<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!--  TEXT  -->
    <style name="PrimaryText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorTertiary">?defaultAppTextColor</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textColorTertiary">?android:textColorTertiary</item>
    </style>

    <!--  Titles  -->
    <style name="AppDefaultTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_text_extra_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppDefaultSubtitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_text_large_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Character List Item  -->
    <style name="ListItemCharacter" parent="PrimaryText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Episode List Item  -->
    <style name="PrimaryText.EpisodeListItem">
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SecondaryText.EpisodeListItem">
        <item name="android:textSize">@dimen/app_text_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--  Appearance List Item  -->
    <style name="PrimaryText.AppearanceListItem">
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SecondaryText.AppearanceListItem">
        <item name="android:textSize">@dimen/app_text_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Character Details -->
    <style name="CharacterDetailsNickName" parent="AppDefaultTitle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CharacterDetailsName" parent="AppDefaultSubtitle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CharacterDetailsAppearanceTitle">
        <item name="android:layout_marginStart">@dimen/app_offset_large</item>
        <item name="android:layout_marginEnd">@dimen/app_offset_large</item>
        <item name="android:layout_marginBottom">@dimen/app_offset_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>




</resources>