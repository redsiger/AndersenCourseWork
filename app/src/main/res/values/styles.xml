<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!--  TEXT  -->
    <style name="PrimaryText">
        <item name="android:textColor">?defaultAppTextColor</item>
        <item name="android:textColorTertiary">?defaultAppTextColor</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <!--  Character List Item  -->
    <style name="ListItemCharacter" parent="PrimaryText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Episode List Item  -->
    <style name="PrimaryText.EpisodeListItem">
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText.EpisodeListItem">
        <item name="android:textSize">@dimen/app_text_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>