<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/app_card_radius_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_offset_medium"
            app:cardCornerRadius="@dimen/search_list_item_image_corner">

            <ImageView
                android:id="@+id/list_item_search_character_img"
                android:layout_width="@dimen/search_list_item_image_size"
                android:layout_height="@dimen/search_list_item_image_size"
                android:layout_gravity="center"
                tools:src="@color/black"
                android:contentDescription="@string/img_desc_character" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/app_offset_medium_small">

            <TextView
                android:id="@+id/list_item_search_character_nickname"
                style="@style/PrimaryText.EpisodeListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_offset_small"
                tools:text="Heisenberg" />

            <TextView
                android:id="@+id/list_item_search_character_name"
                style="@style/SecondaryText.EpisodeListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Walter White" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>