<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/app_offset_large"
    android:paddingTop="@dimen/app_offset_large"
    android:paddingEnd="@dimen/app_offset_large"
    android:paddingBottom="150dp">

    <TextView
        android:id="@+id/fragment_search_filter_title"
        style="@style/AppDefaultSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_offset_large"
        android:text="@string/fragment_filter_title" />

    <TextView
        style="@style/SecondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_category_title"/>

</LinearLayout>