<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_item_character_img"
                android:layout_width="@dimen/list_item_character_img_width"
                android:layout_height="@dimen/list_item_character_img_height"
                android:src="@drawable/ic_person" />

            <View
                android:layout_width="@dimen/list_item_character_img_width"
                android:layout_height="30dp"
                android:background="@drawable/default_shade_from_bottom"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/list_item_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_offset_small"
                android:layout_gravity="bottom"
                tools:text="Name"
                style="@style/ListItemCharacter"/>

        </FrameLayout>

</androidx.cardview.widget.CardView>